<h2>Listing Users</h2>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Slug</th>
      <th class="text-right">Actions</th>
    </tr>
  </thead>
  <tbody>
<%= for user <- @users do %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.slug %></td>
      <td class="text-right">
        <span><%= link "Show", to: user_path(@conn, :show, user.slug), class: "btn btn-default btn-xs" %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>
